{
  "name": "env-watcher",
  "displayName": "Env Watcher",
  "description": "Automatically restart your development server when .env files change. Smart, configurable, and lightweight file watching for Node.js, Python, and any dev environment.",
  "version": "0.0.1",
  "publisher": "DebugSoul",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Extension Packs"
  ],
  "keywords": [
    "env",
    "environment",
    "dotenv",
    "restart",
    "server",
    "development",
    "nodejs",
    "python",
    "flask",
    "express",
    "file watcher",
    "auto restart",
    "dev server",
    "productivity",
    "workflow"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AD17YAKR/envWatcher.git"
  },
  "homepage": "https://github.com/AD17YAKR/envWatcher#readme",
  "bugs": {
    "url": "https://github.com/AD17YAKR/envWatcher/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "env-watcher.enable",
        "title": "Enable",
        "category": "Env Watcher"
      },
      {
        "command": "env-watcher.disable",
        "title": "Disable",
        "category": "Env Watcher"
      },
      {
        "command": "env-watcher.restart",
        "title": "Restart Server",
        "category": "Env Watcher"
      }
    ],
    "configuration": {
      "title": "Env Watcher",
      "properties": {
        "envWatcher.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable environment file watching"
        },
        "envWatcher.watchFile": {
          "type": "string",
          "default": ".env",
          "description": "Environment file to watch for changes"
        },
        "envWatcher.restartCommand": {
          "type": "string",
          "default": "npm run dev",
          "description": "Command to restart the development server"
        },
        "envWatcher.autoRestart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically restart without confirmation"
        },
        "envWatcher.debounceTime": {
          "type": "number",
          "default": 500,
          "description": "Debounce time in milliseconds to avoid restart spam"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^9.1.1",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^4.9.4"
  }
}